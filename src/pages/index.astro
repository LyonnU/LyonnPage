---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
---

<Layout
	title="Portfolio de Uriel León - Desarrollador y Programador FullStack con 5 años de experiencia"
	description="Contrata a Uriel León para crear tu aplicación web. Desarrollador Fullstack. Especializado en crear soluciones a la medida."
>
	<main>
		<SectionContainer class="py-44 pb-24">
			<h1
				class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10"
			>
				Hey, soy Uriel León <a
					href="https://www.linkedin.com/in/ricardourielleon"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl opacity-80 text-wrap">
				+5 años de experiencia. Desarrollador Fullstack. De Córdoba,
				Veracruz 💻 . Especializado en crear soluciones a la medida.
			</h2>

			<nav class="flex gap-x-4 mt-5">
				<SocialPill href="https://www.linkedin.com/in/ricardourielleon">
					<LinkedInIcon class="size-6" />
					LinkedIn
				</SocialPill>

				<SocialPill href="https://github.com/LyonnU">
					<GitHubIcon class="size-6" />
					GitHub
				</SocialPill>

				<SocialPill href="https://github.com/LyonnU">
					<MailIcon class="size-6" />
					Email
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefcaseIcon class="size-7"/>
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
